<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="ACF Rules"
	Version="9,00"
	>
	<Rules>
		<CustomBuildRule
			Name="Arxc"
			DisplayName="ARX Compiler"
			CommandLine="&quot;..\..\..\Bin\$(ConfigurationName)VC12\Arxc.exe&quot; &quot;$(InputPath)&quot; -o &quot;$(ProjectDir)/../../../AuxInclude\Qt5\GeneratedFiles\$(ProjectName)\C$(InputName).cpp&quot; [AllOptions] [AdditionalOptions]"
			Outputs="&quot;$(ProjectDir)/../../../AuxInclude\Qt5\GeneratedFiles\$(ProjectName)\C$(InputName).cpp&quot;;&quot;$(ProjectDir)/../../../AuxInclude\Qt5\GeneratedFiles\$(ProjectName)\C$(InputName).h&quot;"
			AdditionalDependencies="&quot;..\..\..\Bin\$(ConfigurationName)VC12\Arxc.exe&quot;"
			FileExtensions="*.acc;*.arx"
			ExecutionDescription="Compiling ACF Registry File..."
			>
			<Properties>
				<StringProperty
					Name="ConfigFile"
					DisplayName="Packages Configuration File"
					Category="Environment"
					Description="ACF Packages Configuration File"
					Switch="-config &quot;[value]&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<BooleanProperty
					Name="Verbose"
					DisplayName="Verbose"
					Category="Debug"
					Description="Enable verbose mode"
					Switch="-v"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="DeployCopy"
			DisplayName="Deploy copy files"
			CommandLine="copy /Y &quot;[$InputDir]\$(InputName)&quot; &quot;[$OutputDir]\&quot;"
			Outputs="&quot;[$OutputDir]\$(InputName)&quot;"
			AdditionalDependencies="&quot;[$InputDir]\$(InputName)&quot;"
			FileExtensions="*.copy"
			ExecutionDescription="Copying file $(InputName)"
			>
			<Properties>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Category="Environment"
					Description="Specify output directory"
					DefaultValue="$(OutputDir)"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="InputDir"
					DisplayName="Input Directory"
					Category="Environment"
					Description="Optional input directory, if *.copy file should be used as dummy only"
					DefaultValue="$(InputDir)"
					Delimited="true"
					Inheritable="true"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="FileConvertCopy"
			DisplayName="ACF file convertion copy"
			CommandLine="&quot;..\..\..\Bin\$(ConfigurationName)VC12\Acf.exe&quot; &quot;[$RegistryFile]&quot; -config &quot;[$ConfigFile]&quot; -input &quot;$(InputPath)&quot; -o [$OutputDir]/$(InputName)"
			Outputs="&quot;[$OutputDir]/$(InputName)&quot;"
			AdditionalDependencies="&quot;..\..\..\Bin\$(ConfigurationName)VC12\Acf.exe&quot;;&quot;[$RegistryFile]&quot;;&quot;[$ConfigFile]&quot;"
			FileExtensions="*.xtracf"
			ExecutionDescription="Converting File With ACF transformation..."
			>
			<Properties>
				<StringProperty
					Name="RegistryFile"
					DisplayName="Application Registry File"
					Category="Environment"
					Description="ACF registry file with exported interface ibase::IApplication"
					DefaultValue="..\..\..\Partitura\AcfVoce.arp\FileSubstitCopyApp.acc"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="ConfigFile"
					DisplayName="Packages Configuration File"
					Category="Environment"
					Description="ACF packages configuration file"
					DefaultValue="..\..\..\Config\BaseOnly.awc"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output Directory"
					Category="Environment"
					Description="Specify output directory were transformed files will be placed"
					DefaultValue="$(OutputDir)"
					Delimited="true"
					Inheritable="true"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
